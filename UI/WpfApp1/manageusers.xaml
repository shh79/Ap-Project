<Window x:Class="WpfApp1.manageusers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Manage Users" Height="450" Width="800" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="img/1.jpg"/>
    </Window.Background>
    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="35" LastChildFill="False" VerticalAlignment="Top" Width="800" Margin="0,0,-0.4,0" Background="#FF2A2A2C"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Administrator Panel" VerticalAlignment="Top" Margin="310,-3,0,0" Foreground="#FFD3A312" FontFamily="Adobe Myungjo Std M" FontSize="20"/>
        <Button x:Name="Add_User" Content="Add User" HorizontalAlignment="Left" Height="42" Margin="481,107,0,0" VerticalAlignment="Top" Width="262"  Foreground="#FFD3A312" Background="#FF681E1E" FontFamily="Adobe Myungjo Std M" FontSize="22" Click="Add_User_Click"/>
        <Button x:Name="Remove_User" IsEnabled="{Binding ElementName=userlist, Path=SelectedItems.Count}"  Content="Remove User" HorizontalAlignment="Left" Height="42" Margin="481,257,0,0" VerticalAlignment="Top" Width="262"  Foreground="#FFD3A312" Background="#FF681E1E" FontFamily="Adobe Myungjo Std M" FontSize="22" Click="Remove_User_Click"/>
        <Button x:Name="Back" Content="Back" HorizontalAlignment="Left" Height="42" Margin="481,331,0,0" VerticalAlignment="Top" Width="262"  Foreground="#FFD3A312" Background="#FF681E1E" FontFamily="Adobe Myungjo Std M" FontSize="22" Click="Back_Click"/>
        <Button x:Name="Edit_User" IsEnabled="{Binding ElementName=userlist, Path=SelectedItems.Count}"  Content="Edit User" HorizontalAlignment="Left" Height="42" Margin="481,182,0,0" VerticalAlignment="Top" Width="262"  Foreground="#FFD3A312" Background="#FF681E1E" FontFamily="Adobe Myungjo Std M" FontSize="22" Click="Edit_User_Click"/>

        <ListBox x:Name="userlist" HorizontalAlignment="Left" Height="268" VerticalAlignment="Top" Width="366" Margin="53,106,0,0" FontSize="20">



        </ListBox>

    </Grid>
</Window>
