                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="35" Margin="491,3,0,0" Height="35" Background="#FF681E1E" Click="Exit_click" Foreground="#FFD3A312" OpacityMask="#FF2A2A2C"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
                    <Button x:Name="btn1" Content="Next Page" HorizontalAlignment="Left" Height="44" Margin="143,644,0,0" VerticalAlignment="Top" Width="240" Click="nextpg_Click"/>
                </Grid>
            </TabItem>

            <TabItem x:Name="tab2" Header="Tab 2" Margin="1,0,-1,-11" HorizontalAlignment="Left" Width="60" FontWeight="Bold" Foreground="#FFD3A312" Background="#FF681E1E">
